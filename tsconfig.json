{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/typings/env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/auto-imports.d.ts",
    "src/components.d.ts",
    "src/componentInstance.d.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "suppressImplicitAnyIndexErrors": true, // 解决any|string...等不能用于索引的提示
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
